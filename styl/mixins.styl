// prefix declarations
$prefixed($property, $value) {
  if ($webkit == true) {
    -webkit-{$property}: $value;
  }

  if ($moz == true) {
    -moz-{$property}: $value;
  }

  if ($ms == true) {
    -ms-{$property}: $value;
  }

  if ($o == true) {
    -o-{$property}: $value;
  }

  {$property}: $value;
}

// prefix keyframes
$keyframes($name) {

  if ($webkit == true) {
    @-webkit-keyframes {$nameSpace}-{$name} {
      {block}
    }
  }

  if ($moz == true) {
    @-moz-keyframes {$nameSpace}-{$name} {
      {block}
    }
  }

  if ($ms == true) {
    @-ms-keyframes {$nameSpace}-{$name} {
      {block}
    }
  }

  if ($o == true) {
    @-o-keyframes {$nameSpace}-{$name} {
      {block}
    }
  }

  @keyframes {$nameSpace}-{$name} {
    {block}
  }
}
